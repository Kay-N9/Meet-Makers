</style>

<div class="example-wrapper">
    <h1>Hello! ✅</h1>
    <header>
        <nav class="log-nav">

            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('project_user')}}"><p>Bonjour {{ app.user.nickname }}</p></a>
                <a href="{{ path('project_logout')}}">Déconnection-Track-Mec</a>
            {% else %}
               <li><a href="{{ path('project_log')}}">Connection-Track-Mec</a></li>
                <li><a href="{{ path('project_registery')}}">Inscription-Track-Mec</a></li>
            {% endif %}
        </nav>
    </header>
