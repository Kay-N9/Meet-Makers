{% extends 'base.html.twig' %}

{% block title %}
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        <!-- Fichier CSS -->
        
        <link rel="stylesheet" href={{asset('asset/css/style-crea-concours-page-deux.css')}}>



        <!-- Font Awesome #######Ò-->
        <script src="https://kit.fontawesome.com/0a79214c99.js" crossorigin="anonymous"></script>

        <title>Meet Makers - creation (Part-2)</title>
    </head> 
{% endblock %}

{% block body %}

    <main>
    {{ form_start(form)}}
        <div class="container">

            <div class="col-md-12 wrapper my-5">
                <h1 class="text-white">Créa Concours</h1>

                <div class="col-xl-12 col-12">
                    <!------------------------ PROGRESS BAR ------------------------>
                    <ul id="progressbar">
                        <li id="wizard-creation" aria-label="Étape 1 du formulaire">Création
                        </li>
                        <li id="wizard-details" class="active" aria-label="Étape 2 du formulaire">Détails</li>
                        <li id="wizard-validation" aria-label="Étape 3 du formulaire">Validation</li>
                    </ul>
                </div>

                <div id="crea-details">
                    <!------------------------ BUDGET ------------------------>
                    <div id="details-budget" class="my-5">
                        <h2 class="text-white mb-3">Budget</h2>
                        <div class="range-budget my-3 d-flex">
                            {{ form_widget(form.budget, {'attr':{'class':'w-100','id':'budget','value':'1200','min':'300','max':'2000', 'oninput':'this.nextElementSibling.value = this.value'}}) }}    
                            
                             <output class="span-budget">1200€</output>
                                                        
                        </div>
                    </div>

                    <div id="detail-musique-cover" class="col-12 d-flex flex-row my-5">
                        <!------------------------ MUSIQUE ------------------------>
                        <div id="details-musique" class="col-6">
                            <h2 class="text-white mb-3">Musique</h2>
                            <div class="card-relative mx-auto">
                                <div class="card-absolute d-flex flex-column justify-content-center align-items-center">
                                    <div class="d-flex flex-column justify-content-center align-items-center">
                                        <img class="upload mb-3" src={{asset('asset/icones/icone-upload-orange.svg')}}
                                            alt="picto upload">
                                        <p class="depose-police">Dépose le fichier ici</p>
                                        <p class="ou-police">ou</p>
                                        {{ form_label(form.uploadProject, 'Sélectionne un
                                            fichier',{'label_attr':{'id':'bouton-upload'}}) }}
                                        {{form_widget(form.uploadProject, {'attr': {'style':'display:none'}})}}
                                            

                                        {# <button type="button" id="bouton-upload" class="px-3 py-2">Sélectionne un
                                            fichier</button> #}
                                            
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!------------------------ COVER ------------------------>
                        <div id="details-cover" class="col-6">
                            <h2 class="text-white mb-3">Cover</h2>
                            <div class="card-relative mx-auto">
                                <div class="card-absolute d-flex flex-column justify-content-center align-items-center">
                                    <div class="d-flex flex-column justify-content-center align-items-center">
                                        <img class="upload mb-3" src={{asset('asset/icones/icone-upload-orange.svg')}}
                                            alt="picto upload">
                                        <p class="depose-police">Dépose le fichier ici</p>
                                        <p class="ou-police">ou</p>
                                        
                                        {{ form_label(form.uploadPicture, 
                                            'Sélectionne un fichier',
                                            {'label_attr':{'id':'bouton-upload1'}}) }}
                                        {{form_widget(form.uploadPicture, {'attr': {'style':'display:none'}})}}
                                        {# <button type="button" id="boton-upload" class="px-3 py-2">Sélectionne un
                                            fichier</button> #}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!------------------------ STYLE ------------------------>
                    <div class="padding-styles my-5">
                        <h2 class="text-white mb-3">Styles associés</h2>
                        <div>
                            {# {{ form_label(form.style, 'Style', {'label_attr': {'class':'tag'}}) }} #}
                            {{ form_widget(form.style, {'attr': {'class':'o'}}) }}

                        
                            <div id="tag-style-hiphop" class="tag rounded-pill text-white text-center fs-2 me-3 my-3">
                                Hiphop
                            </div>
                            <div id="tag-style-trap" class="tag rounded-pill text-white text-center fs-2 mx-3 my-3">Trap
                            </div>
                            <div id="tag-style-tripop" class="tag rounded-pill text-white text-center fs-2 mx-3 my-3">
                                Tripop
                            </div>
                            <button type="button" id="bouton-ajouter"
                                class="btn fs-3 text-white text-decoration-underline mx-3 my-3">Ajouter+</button>
                        </div>
                    </div>

                    <!------------------------ BOUTONS ------------------------>
                    <div class="precedent-suivant d-flex justify-content-between mt-5">

                        <!------------------------ PRECEDENT ------------------------>
                        <div class="btn-precedent me-5 mt-5">
                            <button type="button" id="bouton-precedent"
                            class="btn outline-light text-white fs-1 me-3 my-3 pe-5 py-2">
                            <svg class="me-3" width="10" height="15" viewBox="0 0 10 18" fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <path d="M9 1L1 9L9 17" stroke="#FBF7FB" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round" />
                            </svg>Précédent
                        </button>
                        </div>
                        
                        <!------------------------ SUIVANT ------------------------>
                        <div class="btn-suivant me-5 mt-5">
                            <button type="button" id="bouton-suivant"
                                class="btn btn-light rounded-pill fs-1 mx-3 my-3 px-5 py-2">Suivant<svg class="ms-3"
                                    width="10" height="15" viewBox="0 0 10 18" fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path class="chevron-bouton-suivant" d="M1 1L9 9L1 17" stroke="#FBF7FB"
                                        stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            </button>
                        </div>

                    </div>

                </div>

            </div>

        </div>
        {{ form_end(form) }}
    </main>
{# <div class="example-wrapper">

    
        <button type="submit" class="btn">Suivant</button>
    
     <a href="{{ path('project_create_project')}}">Précédent</a>
     
</div> #}
<script>
    let inputImg = document.getElementById('project_form_type2_uploadPicture');
    let fileNameFeild = document.getElementById('bouton-upload1');
    inputImg.addEventListener('change', function(event){
        let uploadFileName = event.target.files[0].name;
        fileNameFeild.textContent = uploadFileName;
    })

    let inputSond = document.getElementById('project_form_type2_uploadProject');
    let fileNameFeild1 = document.getElementById('bouton-upload');
    inputSond.addEventListener('change', function(event){
        let uploadFileName1 = event.target.files[0].name;
        fileNameFeild1.textContent = uploadFileName1;
    })
</script>
{% endblock %}

