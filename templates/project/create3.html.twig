</style>

<div class="example-wrapper">
    <h1>RECAP</h1>
    <div>
        <img src={{asset('asset/upload/upload_image/' ~ projet.uploadPicture)}}>
    </div>
    <div>
            <li>{{projet.trackTitle}}</li>
            <li>{{projet.createBy.nickname}}</li>
            <li>
            {% for style in projet.style %}
                <p class="text-card-artiste mb-0">{{style.name}}</p>
            {% endfor %}
